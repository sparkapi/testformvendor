<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <% if flash[:error] %>
        <div class="alert alert-danger" role="alert"><%= flash[:error]%></div>
      <% end %>
      <h1 class="text-center login-title">RESO Member Log In</h1>
      <div class="account-wall">
        <%= form_for :user, html: {class: "form-signin"} do |f| %>
          <%= f.text_field :email, 
            class: "form-control",
            placeholder: "Email",
            autofocus: true,
            required: true
          %>
          <%= f.password_field :password, 
            class: "form-control",
            placeholder: "Password",
            required: true
          %>
          <button class="btn btn-lg btn-primary btn-block" type="submit">
              Sign in
            </button>
        <% end %>
      </div> <!-- account-wall -->
    </div> <!-- col -->
  </div> <!-- row -->
</div> <!-- container -->
